<odoo>
  <data>
    

    <record model="ir.ui.view" id="view_fashion_brand_form">
      <field name="name">view.fashion.brand.form</field>
      <field name="model">fashion.brand</field>
      <field name="arch" type="xml">
        <form string="Marca">
        
          <sheet>
            <group name="group_left">
            <field name="name"/>
            </group>
            <group name="group_right">
            <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_fashion_subrand_form">
      <field name="name">view.fashion.subrand.form</field>
      <field name="model">fashion.subrand</field>
      <field name="arch" type="xml">
        <form string="SubMarca">
        
          <sheet>
            <group name="group_left">
            <field name="name"/>
            </group>
            <group name="group_right">
            <field name="brand"/>
            </group>
          </sheet>
        
        </form>
      </field>
    </record>


