<odoo>
  <data>

    <record model="ir.ui.view" id="view_pet_tree">
      <field name="name">view.pet.tree</field>
      <field name="model">pet.template</field>
      <field name="arch" type="xml">
        <tree string="petTree">
          <field name="name"/>
          <field name="sex"/>
          <field name="specie"/>
          <field name="race"/>
          <field name="owner"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="view_pet_form">
      <field name="name">view.pet.form</field>
      <field name="model">pet.template</field>
      <field name="arch" type="xml">
        <form string="petForm">
          <sheet>
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
                <field name="sex"/>
                <field name="specie"/>
                <field name="race"/>
                <field name="owner"/>
                
              </group>
              <group name="group_right">
              <field name="image" widget='image'/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="pet_action_window">
      <field name="name">pet</field>
      <field name="res_model">pet.template</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          pet
        </p>
        <p>
          Click 'Crear' para a√±adir nuevos elementos.
        </p>
      </field>
    </record>

  </data>
</odoo>
